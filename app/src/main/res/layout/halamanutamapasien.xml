<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Halamanutamapasien">

    <LinearLayout
        android:id="@+id/juduldashboardpasien"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="90dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Hello, Brillian"
                android:paddingTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:id="@+id/notificationdokter"
                android:layout_marginLeft="290dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_baseline_notifications_none_24"
                android:layout_width="40dp"
                android:layout_height="30dp"/>

            <ImageView
                android:src="@drawable/location"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginTop="60dp"
                android:layout_marginLeft="50dp"
                android:text="Mayak, Ponorogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

        </RelativeLayout>

    </LinearLayout>

    <ScrollView
        android:id="@+id/menu"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dash">

        <HorizontalScrollView
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/antridokter"
                    android:paddingBottom="100dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bg_kotak"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/kalender"
                    android:layout_width="110dp"
                    android:layout_height="190dp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="ANTRI DOCTER"
                    android:layout_width="100dp"
                    android:layout_height="90dp"/>

                <ImageView
                    android:paddingBottom="100dp"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/bg_kotak"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/vaksin"
                    android:layout_width="110dp"
                    android:layout_height="190dp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="155dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="VAKSIN"
                    android:layout_width="100dp"
                    android:layout_height="90dp"/>

                <ImageView
                    android:paddingBottom="105dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="280dp"
                    android:background="@drawable/bg_kotak"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/checkup"
                    android:layout_width="110dp"
                    android:layout_height="190dp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="285dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="CHECK UP"
                    android:layout_width="100dp"
                    android:layout_height="90dp"/>

                <ImageView
                    android:paddingBottom="100dp"
                    android:layout_marginLeft="410dp"
                    android:background="@drawable/bg_kotak"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ambulance"
                    android:layout_width="110dp"
                    android:layout_height="190dp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="415dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="AMBULANCE"
                    android:layout_width="100dp"
                    android:layout_height="95dp"/>

                <ImageView
                    android:paddingBottom="100dp"
                    android:layout_marginLeft="540dp"
                    android:background="@drawable/bg_kotak"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/dana"
                    android:layout_width="110dp"
                    android:layout_height="190dp"/>

                <TextView
                    android:textStyle="bold"
                    android:layout_marginLeft="545dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="DANA"
                    android:layout_width="100dp"
                    android:layout_height="90dp"/>

            </RelativeLayout>
        </HorizontalScrollView>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@drawable/bg_listdoc"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/beritacovid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>