<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Halamanutamapasien">

    <LinearLayout
        android:orientation="vertical"
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:textSize="25dp"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:text="Hello, Brillian"
                android:paddingTop="20dp"
                android:layout_marginLeft="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <ImageView
                android:layout_marginLeft="290dp"
                android:layout_marginTop="25dp"
                android:src="@drawable/ic_baseline_notifications_none_24"
                android:layout_width="40dp"
                android:layout_height="30dp"/>

            <ImageView
                android:src="@drawable/location"
                android:layout_marginTop="60dp"
                android:layout_marginLeft="15dp"
                android:layout_width="40dp"
                android:layout_height="20dp"/>

            <TextView
                android:layout_marginTop="60dp"
                android:layout_marginLeft="50dp"
                android:text="Mayak, Ponorogo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>


        </RelativeLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_weight="3"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="70dp">

        <RelativeLayout
            android:layout_gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:background="@drawable/bg_kotak"
                android:drawableStart="@drawable/search"
                android:hint="   Search doctor, Hospital, Pharmacy"
                android:outlineAmbientShadowColor="#FF99DAFF"
                android:outlineSpotShadowColor="#FF99DAFF" />

            <ImageView

                android:paddingRight="100dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:src="@drawable/icondokter"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="60dp"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_listdoc"/>

            <EditText
                android:textStyle="bold"
                android:layout_marginLeft="90dp"
                android:layout_marginTop="70dp"
                android:gravity="center_vertical"
                android:text="CONTACT DOCTER"
                android:layout_width="100dp"
                android:layout_height="90dp"/>

            <ImageView
                android:paddingRight="100dp"
                android:paddingTop="15dp"
                android:paddingBottom="15dp"
                android:src="@drawable/rs"
                android:layout_marginLeft="210dp"
                android:layout_marginTop="60dp"
                android:layout_width="190dp"
                android:layout_height="100dp"
                android:background="@drawable/bg_listdoc"/>

            <EditText
                android:textStyle="bold"
                android:layout_marginLeft="300dp"
                android:layout_marginTop="70dp"
                android:gravity="center_vertical"
                android:text="RUMAH SAKIT"
                android:layout_width="100dp"
                android:layout_height="90dp"/>

        </RelativeLayout>
    </LinearLayout>

    <ScrollView
        android:layout_marginTop="20dp"
        android:layout_weight="4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_dash">

        <HorizontalScrollView
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:paddingBottom="100dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/bg_kotak"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/kalender"
                    android:layout_width="110dp"
                    android:layout_height="190dp"/>

                <EditText
                    android:textStyle="bold"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="ANTRI DOCTER"
                    android:layout_width="100dp"
                    android:layout_height="90dp"/>

                <ImageView
                    android:paddingBottom="100dp"
                    android:layout_marginLeft="150dp"
                    android:background="@drawable/bg_kotak"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/vaksin"
                    android:layout_width="110dp"
                    android:layout_height="190dp"/>

                <EditText
                    android:textStyle="bold"
                    android:layout_marginLeft="155dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="VAKSIN"
                    android:layout_width="100dp"
                    android:layout_height="90dp"/>

                <ImageView
                    android:paddingBottom="105dp"
                    android:paddingTop="5dp"
                    android:layout_marginLeft="280dp"
                    android:background="@drawable/bg_kotak"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/checkup"
                    android:layout_width="110dp"
                    android:layout_height="190dp"/>

                <EditText
                    android:textStyle="bold"
                    android:layout_marginLeft="285dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="CHECK UP"
                    android:layout_width="100dp"
                    android:layout_height="90dp"/>

                <ImageView
                    android:paddingBottom="100dp"
                    android:layout_marginLeft="410dp"
                    android:background="@drawable/bg_kotak"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/ambulance"
                    android:layout_width="110dp"
                    android:layout_height="190dp"/>

                <EditText
                    android:textStyle="bold"
                    android:layout_marginLeft="415dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="AMBULANCE"
                    android:layout_width="100dp"
                    android:layout_height="95dp"/>

                <ImageView
                    android:paddingBottom="100dp"
                    android:layout_marginLeft="540dp"
                    android:background="@drawable/bg_kotak"
                    android:layout_marginTop="40dp"
                    android:src="@drawable/dana"
                    android:layout_width="110dp"
                    android:layout_height="190dp"/>

                <EditText
                    android:textStyle="bold"
                    android:layout_marginLeft="545dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="DANA"
                    android:layout_width="100dp"
                    android:layout_height="90dp"/>

            </RelativeLayout>
        </HorizontalScrollView>
    </ScrollView>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:background="@drawable/bg_listdoc"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="100dp">

                <ImageView
                    android:scaleType="fitXY"
                    android:src="@drawable/beritacovid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp">

        <ImageView
            android:layout_marginTop="5dp"
            android:src="@drawable/home"
            android:layout_width="100dp"
            android:layout_height="30dp"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="100dp"
            android:src="@drawable/transcation"
            android:layout_width="100dp"
            android:layout_height="30dp"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="200dp"
            android:src="@drawable/chat"
            android:layout_width="100dp"
            android:layout_height="30dp"/>

        <ImageView
            android:layout_marginTop="5dp"
            android:layout_marginLeft="300dp"
            android:src="@drawable/profile"
            android:layout_width="100dp"
            android:layout_height="30dp"/>


    </RelativeLayout>
</LinearLayout>