<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Antrpasien">


    <RelativeLayout
        android:paddingBottom="20dp"
        android:layout_weight="0.1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Doctors"
            android:layout_marginTop="15dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:layout_marginLeft="40dp"
            android:layout_width="110dp"
            android:layout_height="wrap_content"/>


        <EditText
            android:drawableStart="@drawable/search"
            android:outlineSpotShadowColor="#FF99DAFF"
            android:outlineAmbientShadowColor="#FF99DAFF"
            android:background="@drawable/bg_tombol"
            android:layout_marginTop="80dp"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="15dp"
            android:hint="   Search doctor by name or specialitation"
            android:layout_width="match_parent"
            android:layout_height="40dp"/>
    </RelativeLayout>

    <ScrollView
        android:layout_weight="2"
        android:layout_width="match_parent"
        android:layout_height="390dp">

        <HorizontalScrollView
            android:layout_marginTop="2dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:paddingBottom="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <EditText
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/bg_listdoc"
                    android:text="ALL"
                    android:textAlignment="center"
                    android:textStyle="bold" />

                <EditText
                    android:text="Dentist"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/bg_tombol"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="130dp"
                    android:layout_width="100dp"
                    android:layout_height="40dp"/>

                <EditText
                    android:text="Cardio"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/bg_tombol"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="245dp"
                    android:layout_width="100dp"
                    android:layout_height="40dp"/>

                <EditText
                    android:text="Neurologi"
                    android:textStyle="bold"
                    android:textAlignment="center"
                    android:background="@drawable/bg_tombol"
                    android:layout_marginRight="15dp"
                    android:layout_marginLeft="360dp"
                    android:layout_width="100dp"
                    android:layout_height="40dp"/>

            </RelativeLayout>

        </HorizontalScrollView>
    </ScrollView>

    <ScrollView

        android:layout_marginTop="5dp"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/pindah"
                android:background="@drawable/bg_listdoc"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:onClick="pindah">

                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dokter3"/>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="DR. Sam Owen"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Cardiologist"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>


            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_listdoc"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dokter2"/>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="DR. Zulfikar"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Dentist"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_listdoc"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dokter4"/>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="DR. Zaky"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="General Physicial"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>

            <RelativeLayout
                android:background="@drawable/bg_listdoc"
                android:layout_margin="20dp"
                android:layout_width="match_parent"
                android:layout_height="150dp">

                <androidx.cardview.widget.CardView
                    android:layout_margin="20dp"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="30dp">

                    <ImageView
                        android:scaleType="fitXY"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/dokter1"/>


                </androidx.cardview.widget.CardView>

                <TextView
                    android:text="DR. Sam Owen"
                    android:textColor="@android:color/black"
                    android:textStyle="bold"
                    android:layout_marginTop="50dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>

                <TextView
                    android:text="Cardiologist"
                    android:layout_marginTop="70dp"
                    android:layout_marginLeft="160dp"
                    android:layout_marginRight="20dp"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"/>
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>