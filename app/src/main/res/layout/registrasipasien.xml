<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".Registrasipasien">

    <LinearLayout
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:text="Pendaftaran Pasien"
            android:layout_marginTop="1dp"
            android:textSize="30dp"
            android:textStyle="bold"
            android:textColor="@android:color/black"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <ImageView
            android:id="@+id/logopasien"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="10dp"
            android:src="@drawable/imagesktp" />

    </LinearLayout>

    <ScrollView
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_weight="1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_regis">

            <TextView
                android:text="No. KTP"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_tombol"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="  Masukkan NO.KTP"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:text="No. KK"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_tombol"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="  Masukkan NO.KK"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:text="NAMA"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_tombol"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="  Masukkan NAMA"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:text="Tanggal lahir"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_tombol"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="  Masukkan Tanggal lahir"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:text="Jenis Kelamin"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_tombol"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="  Masukkan Jenis Kelamin"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:text="Alamat"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_tombol"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="  Masukkan Alamat Lengkap"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:text="No. Telepon"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_tombol"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="  Masukkan No Telepon"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:text="Email"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_tombol"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="  Masukkan Email"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:text="Password"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_tombol"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="  Masukkan Password"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <TextView
                android:text="Riwayat"
                android:textSize="20dp"
                android:layout_marginLeft="15dp"
                android:textColor="@android:color/black"
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <EditText
                android:background="@drawable/bg_tombol"
                android:layout_marginTop="5dp"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"
                android:hint="  Masukkan Riwayat"
                android:layout_width="match_parent"
                android:layout_height="40dp"/>

            <Button
                android:id="@+id/create"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:background="@drawable/button_daftar"
                android:layout_marginTop="30dp"
                android:layout_marginBottom="20dp"
                android:textAllCaps="false"
                android:textSize="16dp"
                android:text="Buat Akun"
                android:layout_width="170dp"
                android:layout_height="40dp"/>



        </LinearLayout>
    </ScrollView>

</LinearLayout>